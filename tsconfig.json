{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2021"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
